<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc.platform.dao.AddDao">

    <!--新增商品信息-->
    <insert id="insertAddProduct" useGeneratedKeys="true" keyColumn="goods_id" keyProperty="goodsId">
        insert into wxb_goods(goods_name) values (#{goodsName})
    </insert>

    <!--新增套餐信息-->
    <insert id="insertAddSku">
        insert into wxb_good_sku2(sku_name,sku_cost,sku_price,sku_pmoney,service_money,goods_id) values
        <foreach collection="sku2List" item="sku" separator=",">
            (#{sku.skuName},#{sku.skuCost},#{sku.skuPrice},#{sku.skuPmoney},#{sku.serviceMoney},#{goodsId})
        </foreach>
    </insert>

</mapper>