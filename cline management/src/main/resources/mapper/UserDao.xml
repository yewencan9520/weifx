<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc.Client.dao.UserDao">

    <select id="findUser" resultType="com.abc.Client.bean.WxbCustomer">
        SELECT login_name AS loginName,login_pwd AS loginPwd FROM wxb_customer WHERE login_name=#{username}
    </select>

</mapper>